<%= render "devise/shared/error_messages", resource: resource %>
<div class="container py-20 mx-auto">
  <div class="bg-backgroundGray rounded-xl shadow_custom max-w-lg mx-auto">
    <h2 class="text-center text-3xl pt-7 font-bold"><%= t('session_page.Sign up')%></h2>

    <div class="flex pt-16 pb-10 justify-center">
      <%= form_for(resource, as: resource_name, html:{class: ""} , url: registration_path(resource_name)) do |f| %>
      <%# <%= form_for(resource, as: resource_name, html:{class: "w-1/2"} , url: registration_path(resource_name)) do |f| %>
      <div class="max-w-64 mx-auto">
        <label class="input flex items-center h-10 bg-inherit text-customGray rounded-none border-b-2 border-t-0 border-l-0 border-r-0 border-customGray">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            fill="currentColor"
            class="h-4 w-4 opacity-70 text-black">
            <path
              d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" />
          </svg>
          <%= f.text_field :name, autocomplete: "name" ,placeholder:"Your name", class:"block mx-auto placeholder-customGray" %>
        </label>

        <label class="input flex items-center h-10 bg-inherit text-customGray rounded-none border-b-2 border-t-0 border-l-0 border-r-0 border-customGray mt-5">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            fill="currentColor"
            class="h-5 w-5 opacity-70 text-black">
            <path
              d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
            <path
              d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
          </svg>
          <%= f.email_field :email, autocomplete: "email", class:"block mx-auto placeholder-customGray", placeholder:"E-mail" %>
        </label>


        <label class="input flex items-center h-10 bg-inherit text-customGray rounded-none border-b-2 border-t-0 border-l-0 border-r-0 border-customGray mt-5">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            fill="currentColor"
            class="h-5 w-5 opacity-70 text-black">
            <path
              fill-rule="evenodd"
              d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
              clip-rule="evenodd" />
          </svg>
          <% if @minimum_password_length %>
            <%= f.password_field :password, autocomplete: "new-password", class:"block mx-auto placeholder-customGray",placeholder:"Password (Min #{@minimum_password_length} chars)"%>
          <% else %>
            <%= f.password_field :password, autocomplete: "new-password", class:"block mx-auto placeholder-customGray",placeholder:"Password" %>
          <% end %>
        </label>

        <label class="input flex items-center h-10 bg-inherit text-customGray rounded-none border-b-2 border-t-0 border-l-0 border-r-0 border-customGray mt-5">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            fill="currentColor"
            class="h-5 w-5 opacity-70 text-black">
            <path
              fill-rule="evenodd"
              d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
              clip-rule="evenodd" />
          </svg>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"block mx-auto placeholder-customGray",placeholder:"Confirm Password"%>
        </label>
        <div class="actions text-center mt-10">
          <%= f.submit t('session_page.Sign up'), class: "btn btn-success text-white w-64 max-w-full"%>
        </div>
      </div>
      <% end %>
      <div class="w-1/2 hidden">
        <button href="#" class="block mx-auto"><%= t('session_page.Sing up by Google')%></button>
        <button href="#" class="block mx-auto"><%= t('session_page.Sing up by Github')%></button>
      </div>
    </div>
  </div>
</div>

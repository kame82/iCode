<div class="container bg-gray-200 mx-auto my-20">
  <h2 class="text-center"><%= t('session_page.Login')%></h2>

  <div class="flex">
    <%= form_for(resource, as: resource_name, html:{class: "w-1/2"}, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autocomplete: "email", class:"block mx-auto", placeholder:"E-mail" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", class:"block mx-auto",placeholder:"Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field block mx-auto text-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <p class="text-center">パスワードを忘れた方（再設定）</p>
      <div class="actions text-center">
        <%= f.submit t('session_page.Login') %>
      </div>
    <% end %>
    <div class="w-1/2">
      <button href="#" class="block mx-auto"><%= t('session_page.Login by Google') %></button>
      <button href="#" class="block mx-auto"><%= t('session_page.Login by Github') %></button>
    </div>
  </div>
</div>
